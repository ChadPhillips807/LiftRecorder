                </div>

                <div class="checkbox">
                    <label>
                        @Html.CheckBox("Shoulder Lifts", false, new { id = "cbShoulderLifts", onclick = "javascript:checkboxclick();" }) Shoulder Lifts
                    </label>
                </div>

                <div class="checkbox">
                    <label>
                        @Html.CheckBox("Arm Lifts", false, new { id = "cbArmLifts", onclick = "javascript:checkboxclick();" }) Arm Lifts
                    </label>
                </div>*@
                <div class="form-group">
                    @Html.LabelFor(m => m.UserLift.LiftId)
                    @Html.DropDownListFor(m => m.UserLift.LiftId, new SelectList(Model.Lifts, "LiftId", "Name"), "Select Lift", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UserLift.Weight)
                    @Html.TextBoxFor(m => m.UserLift.Weight, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.UserLift.Reps)
                    @Html.TextBoxFor(m => m.UserLift.Reps, new { @class = "form-control" })
                </div>
                @Html.HiddenFor(m => m.Lifts)
                @Html.HiddenFor(m => m.AppUser.AppUserId)
                @*@Html.HiddenFor(m => m.UserLift.LiftId)*@
                <button type="submit" class="btn btn-primary">Add Lift</button>
                <button type="submit" class="btn btn-primary">Add Lift</button>
            }
            <div id="ProductsDiv2">
            </div>
        </div>
        <div id="menu2" class="tab-pane fade">
