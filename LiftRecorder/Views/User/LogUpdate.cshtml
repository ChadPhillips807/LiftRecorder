                <div class="form-group" id="divpass3">
                    @Html.Label("Legs")
                    @Html.DropDownListFor(m => m.UserLift.LiftId, new SelectList(Model.Lifts.Where(m => m.LiftType == "Legs"), "LiftId", "Name"), "", new { @class = "form-control" })
                </div>

                <div class="form-group" id="divpass4">
                    @Html.Label("Shoulders")
