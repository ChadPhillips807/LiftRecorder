                </div>

                <div class="form-group" id="divpass5">
                    @Html.Label("Bi's/Tri's")
                    @Html.DropDownListFor(m => m.UserLift.LiftId, new SelectList(Model.Lifts.Where(m => m.LiftType == "Arms"), "LiftId", "Name"), "", new { @class = "form-control" })
                </div>

