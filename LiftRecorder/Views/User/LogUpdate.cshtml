                    </label>
                </div>

                <div class="checkbox">
                    <label>
                        @Html.CheckBox("Back Lifts", false, new { id = "cbBackLifts", onclick = "javascript:checkboxclick();" }) Back Lifts
                    </label>
                </div>

                <div class="checkbox">
                    <label>
                        @Html.CheckBox("Leg Lifts", false, new { id = "cbLegLifts", onclick = "javascript:checkboxclick();" }) Leg Lifts
